<Window x:Class="NEZ.Shell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NEZ DeepSeek-OCR" Height="720" Width="1120"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- WebView2 ホスト -->
        <Grid x:Name="WebHost">
            <WebView2:WebView2 x:Name="Web" xmlns:WebView2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"/>
        </Grid>

        <!-- 起動待機オーバーレイ -->
        <Border x:Name="Overlay" Background="#AA000000" Visibility="Visible">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
                <TextBlock Text="サーバ起動中..." Foreground="White" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <ProgressBar IsIndeterminate="True" Width="240" Height="8"/>
                <TextBlock x:Name="OverlayDetail" Text="" Foreground="#DDD" FontSize="12" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                    <Button x:Name="RetryBtn" Content="再試行" Visibility="Collapsed" Width="96" Margin="0,0,8,0" Click="RetryBtn_Click"/>
                    <Button x:Name="ExitBtn" Content="終了" Visibility="Collapsed" Width="96" Click="ExitBtn_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
